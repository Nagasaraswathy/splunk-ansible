options {
    use_dns (yes);
    frac_digits(4);
};

source s_net {
	udp(ip(0.0.0.0) port(514));
	tcp(ip(0.0.0.0) port(514));
};

destination d_files_splunk {
	file("{{ syslog_destination_folder }}/$HOST/$YEAR$MONTH$DAY.log" create_dirs(yes) dir_owner("{{ log_owner }}") dir_group("{{ log_group }}") dir_perm(0770) owner("{{ log_group }}") group("{{ log_group }}") perm(0660));
};

log {
	source(s_net);
	destination(d_files_splunk);
};